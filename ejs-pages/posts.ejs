<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head.ejs') %>
<body>
	<%- include('./partials/nav.ejs') %>
	<div class="post-body">
		<h1>POSTS</h1>

		<%posts.forEach(({id,text,title,date,author})=>{%>
			<div class="posts">
				<div class="post">
					<h3>
						<a href="/posts/<%=id %>"><%=title %></a>
					</h3>
					<p><%=text %></p>
					<div class="bottom">
						<span class="bottom-left"><%=author %></span>
						<span class="bottom-rigth"><%=date %></span>
					</div>
				</div>	
			</div>	
        <%})%>
		
	</div>
</body>
</html>